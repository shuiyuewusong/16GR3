<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 启用自动动态方法的调用 -->
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<constant name="struts.custom.i18n.resources" value="global"></constant>
	<!-- 是否自动加载国际化资源文件 -->
	<constant name="struts.i18n.reload" value="true" />
	<!-- 编码格式 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />

	<!-- 全局配置 -->
	<package name="default" namespace="/" extends="struts-default">
		<global-results>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</global-results>

	</package>
	<!-- 模块化管理包 -->
	<package name="usermanager" extends="default">
		<action name="local" class="com.qhit.lh.gr3.cj.t6.action.LocalAction">
			<result name="success">/jsp/Login.jsp</result>
		</action>

		<action name="*User" class="com.qhit.lh.gr3.cj.t6.action.LoginAction"
			method="{1}">
			<result name="input">/jsp/Login.jsp</result>
			<result name="loginSuccess">/jsp/welcome.jsp</result>
		</action>
	</package>
</struts>
